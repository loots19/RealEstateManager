<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewMedia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_view_media_margin_start"
        android:text="@string/textView_media"
        android:textSize="@dimen/text_view_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_view_layout_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMedia"
        tools:listitem="@layout/item_rv_detail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_view_media_margin_start"
        android:text="@string/tv_description_detail"
        android:textSize="@dimen/text_view_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_desc_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_detail" />

    <TextView
        android:id="@+id/tv_desc_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_view_description_layout_height"
        android:layout_marginStart="10dp"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginEnd="10dp"
        android:text="*************************************************************
        *************************************************************************************"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_detail" />

    <ImageView
        android:id="@+id/imageView_surface"
        android:layout_width="@dimen/image_view_layout_width"
        android:layout_height="@dimen/image_view_layout_height"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginEnd="@dimen/margin_end"
        android:src="@drawable/clipart3584701"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc_detail" />

    <TextView
        android:id="@+id/tv_surface_detail"
        android:layout_width="@dimen/text_view_width"
        android:layout_height="@dimen/text_view_height"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginEnd="@dimen/text_view_margin_end"
        android:text="@string/tv_surface_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_surface"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc_detail" />

    <ImageView
        android:id="@+id/imageView_nbr_rooms"
        android:layout_width="@dimen/image_view_layout_width"
        android:layout_height="@dimen/image_view_layout_height"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginEnd="@dimen/margin_end"
        android:src="@drawable/home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_surface_detail" />

    <TextView
        android:id="@+id/tv_nbrRooms_detail"
        android:layout_width="@dimen/text_view_width"
        android:layout_height="@dimen/text_view_height"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginEnd="@dimen/text_view_margin_end"
        android:text="@string/tv_nbrRooms_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_nbr_rooms"
        app:layout_constraintTop_toBottomOf="@+id/tv_surface_detail" />

    <ImageView
        android:id="@+id/imageView_date"
        android:layout_width="@dimen/image_view_layout_width"
        android:layout_height="@dimen/image_view_layout_height"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginEnd="@dimen/image_view_margin_end_date_location"
        android:src="@drawable/calendar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_nbrRooms_detail"
        app:layout_constraintTop_toBottomOf="@+id/tv_nbrRooms_detail" />

    <TextView
        android:id="@+id/tv_date_detail"
        android:layout_width="@dimen/text_view_date_location_width"
        android:layout_height="@dimen/text_view_date_location_height"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginEnd="@dimen/margin_end_date_location"
        android:text="@string/tv_date_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_nbrRooms_detail" />

    <ImageView
        android:id="@+id/imageView_location"
        android:layout_width="@dimen/image_view_layout_width"
        android:layout_height="@dimen/image_view_layout_height"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginEnd="@dimen/image_view_margin_end_date_location"
        android:src="@drawable/location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_surface_detail"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc_detail" />

    <TextView
        android:id="@+id/tv_location_detail"
        android:layout_width="@dimen/text_view_date_location_width"
        android:layout_height="@dimen/text_view_date_location_height"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginEnd="@dimen/margin_end_date_location"
        android:text="@string/tv_location_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_location"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc_detail" />

    <ImageView
        android:id="@+id/imageView_nbr_bath"
        android:layout_width="@dimen/image_view_layout_width"
        android:layout_height="@dimen/image_view_layout_height"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginEnd="@dimen/margin_end"
        android:src="@drawable/bathtub"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nbrRooms_detail" />

    <TextView
        android:id="@+id/tv_nbrBath_detail"
        android:layout_width="@dimen/text_view_width"
        android:layout_height="@dimen/text_view_height"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginEnd="@dimen/text_view_margin_end"
        android:text="@string/tv_nbrBath_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_nbr_bath"
        app:layout_constraintTop_toBottomOf="@+id/tv_nbrRooms_detail" />

    <ImageView
        android:id="@+id/imageView_nbr_bed"
        android:layout_width="@dimen/image_view_layout_width"
        android:layout_height="@dimen/image_view_layout_height"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginEnd="@dimen/margin_end"
        android:src="@drawable/bed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nbrBath_detail" />

    <TextView
        android:id="@+id/tv_nbrBed_detail"
        android:layout_width="@dimen/text_view_width"
        android:layout_height="@dimen/text_view_height"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginEnd="@dimen/text_view_margin_end"
        android:text="@string/tv_nbrBed_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_nbr_bed"
        app:layout_constraintTop_toBottomOf="@+id/tv_nbrBath_detail" />

    <ImageView
        android:id="@+id/imageView_price"
        android:layout_width="@dimen/image_view_layout_width"
        android:layout_height="@dimen/image_view_layout_height"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginEnd="@dimen/margin_end"
        android:src="@drawable/dollar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nbrBed_detail" />

    <TextView
        android:id="@+id/tv_price_detail"
        android:layout_width="@dimen/text_view_width"
        android:layout_height="@dimen/text_view_height"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginEnd="@dimen/text_view_margin_end"
        android:text="@string/tv_price_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_price"
        app:layout_constraintTop_toBottomOf="@+id/tv_nbrBed_detail" />

    <ImageView
        android:id="@+id/imageView_agent"
        android:layout_width="@dimen/image_view_layout_width"
        android:layout_height="@dimen/image_view_layout_height"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginEnd="@dimen/margin_end"
        android:src="@drawable/real_estate_agent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_price_detail" />

    <TextView
        android:id="@+id/tv_agent_detail"
        android:layout_width="@dimen/text_view_width"
        android:layout_height="@dimen/text_view_height"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginEnd="@dimen/text_view_margin_end"
        android:text="@string/tv_agent_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_agent"
        app:layout_constraintTop_toBottomOf="@+id/tv_price_detail" />


    <FrameLayout
        android:id="@+id/frameLayout_detail_activity"
        android:layout_width="@dimen/frame_layout_width"
        android:layout_height="@dimen/frame_layout_width"
        android:layout_marginStart="@dimen/frame_layout_margin_start"
        android:layout_marginBottom="@dimen/frame_layout_margin_bottom"
        android:background="@drawable/map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nbrBed_detail" />


</androidx.constraintlayout.widget.ConstraintLayout>